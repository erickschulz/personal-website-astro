---
import Layout from '../layouts/Layout.astro';
---
<Layout page="contact" bodyClass="home-gradient">
  <div class="content-wrapper">
    <section class="fade-in-section">
      <div class="card">
        <div class="card-text">
          <h2>Contact Me</h2>
          <div class="contact-container">
            <a href="mailto:erick.schulz@proton.me" class="email-display">
              <i class="fas fa-envelope"></i> erick.schulz@proton.me
            </a>
            <a href="https://www.linkedin.com/in/erick-schulz/" class="button" target="_blank">
              <i class="fab fa-linkedin"></i> LinkedIn
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 6rem 1.5rem;
  }
  .card {
    background: var(--card-background);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border);
  }
  .card h2 {
    font-size: 2.5rem;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }
  .card p {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }
  .contact-container {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  /* --- REVISED STYLES FOR EMAIL LINK --- */
  .email-display,
  .email-display:visited {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    /* Matching the style of your other text for consistency */
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease-in-out;
  }

  .email-display:hover {
    /* Using a brighter color for hover, assuming your --text-primary or white is brighter */
    color: var(--text-primary, white);
    text-decoration: none;
  }
  /* --- END REVISED STYLES --- */

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    background-color: #416b5c;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s ease-in-out;
  }
  .button:hover {
    background-color: #34554a;
  }
  .button i {
    margin-right: 0.5rem;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .fade-in-section {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 1.5s 0.2s ease-out forwards;
  }
</style>
